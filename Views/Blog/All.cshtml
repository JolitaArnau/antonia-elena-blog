@model IEnumerable<Your_Blog_Template.Areas.Admin.ViewModels.BlogPostBindingModel>
@{
    ViewData["Title"] = "Blog";
    Layout = "_Layout";
}

<div class="container p-4 text-center">
    <ul class="nav justify-content-center">
        <li class="nav-item pl-3">
            <a class="nav-link category btn" a asp-action="Recipes" asp-controller="Blog">
                <h6>Recipes & Cooking Inspiration</h6>
            </a>
        </li>
        <li class="nav-item pl-3">
            <a class="nav-link category btn" asp-action="Travelling" asp-controller="Blog">
                <h6>Travelling</h6>
            </a>
        </li>
        <li class="nav-item pl-3">
            <a class="nav-link category btn" asp-action="Thoughts" asp-controller="Blog">
                <h6>Thoughts</h6>
            </a>
        </li>
    </ul>
</div>

@foreach (var blogPost in Model)
{
    <div class="d-flex justify-content-center p-5">
        <div class="col-lg-8 text-center p-4 blog-container">
            <h6 class="text-center">@blogPost.Category</h6>
            <h3 class="text-center">@blogPost.Title.ToUpper()</h3>
            <h6 class="text-center">@blogPost.CreatedOn.ToString("dd/MM/yyyy")</h6>
            <hr class="blog-title-divider"/>
            <p class="text-center">
                <em>@blogPost.Writer</em>
            </p>
            <div class="row">

                @if (blogPost.ImageUrl != null)
                {
                    <div class="col-lg-12 justify-content-center">
                        <img class="img-fluid blog" src="@blogPost.ImageUrl" alt="Card image" width="50%" height="50%">
                    </div>
                }
                else
                {
                    <div class="col-lg-6 text-center p-5" style="background-color: whitesmoke">No Image Availabe</div>
                }
            </div>
            <p class="pt-4">
                <button class="btn forwards-backwards-btn pl-3">
                    <h6><a asp-action="Details" asp-controller="Blog" asp-route-id="@blogPost.Id">Read</a> <i class="fas fa-chevron-right"></i></h6>
                </button>
            </p>
        </div>
    </div>
}