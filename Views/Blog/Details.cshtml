@model Your_Blog_Template.Areas.Admin.ViewModels.BlogPostBindingModel
@{
    ViewBag.Title = Model.Title;
    Layout = "_Layout";
}

<div class="d-flex justify-content-center p-5">
    <div class="col-lg-8 text-center p-4 blog-container">
        <h6 class="text-center">@Model.Category</h6>
        <h3 class="text-center">@Model.Title.ToUpper()</h3>
        <h6 class="text-center">@Model.CreatedOn.ToString("dd/MM/yyyy")</h6>
        <hr class="blog-title-divider"/>
        <p class="text-center">
            <em>@Model.Writer</em>
        </p>
        <div class="row">

            @if (Model.ImageUrl != null)
            {
                <div class="col-lg-12 justify-content-center">
                    <img class="img-fluid blog" src="@Model.ImageUrl" alt="Card image" width="50%" height="50%">
                </div>
            }
            else
            {
                <div class="col-lg-6 text-center p-5" style="background-color: whitesmoke">No Image Availabe</div>
            }
        </div>
        <div class="col-lg-12 text-center blog-content">
            @Html.Raw(Model.Content)
        </div>

    </div>
</div>

<div class="row text-left p-5">
    <h6 class="btn forwards-backwards-btn">
        <a onclick="window.history.back()"><i class="fas fa-chevron-left"></i> Zur√ºck</a>
    </h6>
</div>