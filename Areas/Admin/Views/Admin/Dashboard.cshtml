        <ul class="nav justify-content-center">
            <li class="nav-item">
                <p class="nav-link">Hello @UserManager.GetUserName(User)!</p>
            </li>
            <li class="nav-item">
                <p class="nav-link">|</p>
            </li>
        <li class="nav-item">
            <button type="submit" class="btn btn-link navbar-btn">Logout</button>
        </li>
        </ul>
    </form>
}

