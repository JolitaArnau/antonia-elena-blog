@model Antonia_Elena_Blog.Areas.Admin.ViewModels.BlogPostBindingModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center"><i class="far fa-edit"></i> EDIT POST "@Model.Title"</h1>

<div class="container-fluid p-5">
    <form method="post" asp-action="Edit" asp-controller="Admin">
        <label>Category</label>
        <div class="form-group">
            <label> <input asp-for="Category" value="Reisen" type="radio"/> Reisen</label>
            <label> <input asp-for="Category" value="Rezepte&Kochinspo" type="radio"/> Rezepte&Kochinspo</label>
            <label> <input asp-for="Category" value="Gedanken" type="radio"/> Gedanken</label>
        </div>
        <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" placeholder="Title" asp-for="Title" value="@Model.Title">
        </div>
        <div class="form-group">
            <label>Publisher/Writer</label>
            <input type="text" class="form-control" placeholder="Publisher/Writer" asp-for="Writer" value="@Model.Writer">
        </div>
        <div class="form-group">
            <label>Image Url</label>
            <input type="text" class="form-control" placeholder="Image URL" asp-for="ImageUrl" value="@Model.ImageUrl">
        </div>
        <div class="form-group">
            <label>Content</label>
            <textarea asp-for="Content" value="@Model.Content"></textarea>
        </div>
        <button type="button" class="btn btn-success mt-3" data-toggle="modal" data-target="#exampleModal">
            <i class="far fa-check-circle"></i> Save Changes
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Save Changes To Post "@Model.Title"</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Would you really like to save the changes?
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="form-group pt-4">
        <button onclick="window.history.back()" class="btn btn-secondary"><i class="fas fa-chevron-left"></i> Cancel</button>
    </div>
</div>
