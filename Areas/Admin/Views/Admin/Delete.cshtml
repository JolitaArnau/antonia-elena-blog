@model Your_Blog_Template.Areas.Admin.ViewModels.BlogPostBindingModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center"><i class="fas fa-trash"></i> DELETE POST "@Model.Title"</h1>

<div class="container-fluid p-5">
    <form method="post" asp-action="Delete" asp-controller="Admin">
        <label>Category</label>
        <div class="form-group">
            <input disabled asp-for="Category" type="text" value="@Model.Category" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <input disabled type="text" class="form-control" value="@Model.Title">
        </div>
        <div class="form-group">
            <label>Publisher/Writer</label>
            <input disabled type="text" class="form-control" value="@Model.Writer">
        </div>
        <div style="width: 100%; height: 100%; background-color: #e9ecef; opacity: 1;" class="form-control">@Html.Raw(Model.Content)</div>
        <button type="button" class="btn btn-danger mt-3" data-toggle="modal" data-target="#exampleModal">
            <i class="fas fa-trash"></i> Delete
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Post "@Model.Title"</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Do you really want to delete this post?
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="window.history.back()">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="form-group pt-4">
        <button onclick="window.history.back()" class="btn btn-secondary"><i class="fas fa-chevron-left"></i> Cancel</button>
    </div>
</div>